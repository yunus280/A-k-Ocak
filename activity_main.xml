<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnKamyonGonder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kamyon Gönder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etKamyonSec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Kamyon Seç"
        app:layout_constraintTop_toBottomOf="@id/btnKamyonGonder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnVardiyaSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vardiya Seç"
        app:layout_constraintTop_toBottomOf="@id/etKamyonSec"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMarkupSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Markup Seç"
        app:layout_constraintTop_toBottomOf="@id/btnVardiyaSec"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnKantarciSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kantarcı Seç"
        app:layout_constraintTop_toBottomOf="@id/btnMarkupSec"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCevherSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cevher Seç"
        app:layout_constraintTop_toBottomOf="@id/btnKantarciSec"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUretimeBasla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Üretime Başla"
        app:layout_constraintTop_toBottomOf="@id/btnCevherSec"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRaporlariGoruntule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raporları Görüntüle"
        app:layout_constraintTop_toBottomOf="@id/btnUretimeBasla"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>